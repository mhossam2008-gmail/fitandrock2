<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edit_text">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit_text"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="#fff"
            android:foregroundGravity="right"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:text="Close"
            android:textColor="@color/bg_comments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Class Type" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sClassType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Class Name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="48dp" />

        <EditText
            android:id="@+id/etClassName"
            android:layout_width="391dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Class Name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="48dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Gender" />

        <Spinner
            android:id="@+id/sGender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_edit_text"
            android:entries="@array/class_gender" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Start Time" />

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="End Time" />
        </LinearLayout>

        <EditText
            android:id="@+id/etVideoURL"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Video Link"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="48dp" />

        <EditText
            android:id="@+id/etAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Additional Info"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/bAddClass"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@drawable/orange_shape_button"
            android:foregroundGravity="center"
            android:text="Add Class"
            android:textColor="@color/bg_comments"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivbAddClassImage" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>